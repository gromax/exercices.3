<!-- Devoir <%- idDevoir %> -->
<h3><%- nom %></h3>
<%if (notStarted) { %>
    <p class="text-warning"><em>Commence le <%- dateDebutFr %>.</em></p>
<% } else if (notEnded) { %>
    <p class="text-success"><em>En cours jusqu'au <%- dateFinFr %> inclus.</em></p>
<% } else { %>
    <p class="text-danger"><em>Termin√© depuis le <%- dateFinFr %>.</em></p>
<% } %>

<p><%- description %></p>

<% if (modeEleve) { %>
    <p>Votre note : <strong><%- note %> %</strong></p>
<% } else { %>
    <p>Note de <%- nomComplet %><% if(nomClasse) { %> &mdash; <%- nomClasse %><% } %> : <strong><%- note %> %</strong></p>
<% } %>
